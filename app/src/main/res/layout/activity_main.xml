<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.sam.summoner.activity.MainActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/summonerText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        android:text="findSummoner" />

    <EditText
        android:id="@+id/summonerText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        android:hint="Enter a summoner name"
        android:textColor="@color/colorText"
        android:shadowColor="@color/colorText"
        android:textColorHint="@android:color/darker_gray"/>

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summonerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Search" />

    <Button
        android:id="@+id/viewFavsBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="View favorites"/>

    <Button
        android:id="@+id/test"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewFavsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="test"/>

</RelativeLayout>
