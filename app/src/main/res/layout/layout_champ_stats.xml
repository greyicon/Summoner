<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background3"
    android:id="@+id/playerBackground"
    android:layout_marginTop="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/statsChampPortrait"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statsChampName"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Aurelion Sol"
        android:layout_toRightOf="@+id/statsChampPortrait"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statsChampNumbers"
        android:textColor="@color/colorText"
        android:textSize="15dp"
        android:text="Games: 345 | Winrate: 100%"
        android:layout_toRightOf="@+id/statsChampPortrait"
        android:layout_below="@id/statsChampName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>