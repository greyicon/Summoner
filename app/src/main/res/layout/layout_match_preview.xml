<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background3"
    android:layout_marginTop="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/playerChampPortrait"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerName"
        android:layout_toRightOf="@+id/playerChampPortrait"
        android:layout_alignTop="@id/playerChampPortrait"
        android:paddingLeft="2dp"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Win"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchMode"
        android:layout_alignBottom="@+id/playerChampPortrait"
        android:layout_toRightOf="@id/playerChampPortrait"
        android:layout_marginBottom="4dp"
        android:paddingLeft="2dp"
        android:textColor="@color/colorText"
        android:textSize="10dp"
        android:text="Normal Draft"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerLevel"
        android:layout_alignLeft="@+id/playerChampPortrait"
        android:layout_alignTop="@+id/playerChampPortrait"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:text="18"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchItemLayout"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/empty_item"
            android:id="@+id/matchItem1"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/matchItem2"
            android:background="@drawable/empty_item"
            android:layout_toRightOf="@+id/matchItem1"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/matchItem3"
            android:layout_toRightOf="@+id/matchItem2"
            android:background="@drawable/empty_item"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/matchItem4"
            android:background="@drawable/empty_item"
            android:layout_toRightOf="@+id/matchItem3"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/matchItem5"
            android:layout_toRightOf="@+id/matchItem4"
            android:background="@drawable/empty_item"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/matchItem6"
            android:layout_toRightOf="@+id/matchItem5"
            android:background="@drawable/empty_item"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/matchItem7"
            android:layout_toRightOf="@+id/matchItem6"
            android:background="@drawable/empty_item"
            android:layout_marginLeft="1dp"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/matchSumm2"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/matchItemLayout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/matchSumm1"
        android:layout_toLeftOf="@+id/matchSumm2"
        android:layout_below="@+id/matchItemLayout"

        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchStats"
        android:layout_below="@+id/matchItemLayout"
        android:layout_toLeftOf="@+id/matchSumm1"
        android:layout_marginRight="6dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorText"
        android:gravity="right"
        android:textSize="10dp"
        android:text="Gold: 00000 | CS: 000 | KDA: 00/00/00&#xA; Gametime: 00:00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchDate"
        android:layout_below="@+id/playerChampPortrait"
        android:paddingLeft="15dp"
        android:textColor="@color/colorText"
        android:textSize="10dp"
        android:text="0000-00-00"/>


</RelativeLayout>